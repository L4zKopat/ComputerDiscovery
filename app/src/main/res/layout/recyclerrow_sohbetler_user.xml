<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/arkaplan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">





    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSohbetler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_goneMarginStart="70dp"
        android:paddingStart="70dp"
        android:layout_marginEnd="4dp"
        app:cardBackgroundColor="@color/secilenRenk"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/recyclerrow_mesaj_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="s"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlCompat" />


    </androidx.cardview.widget.CardView>






    <ImageView
        android:id="@+id/sohbetler_resim"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/sohbetler_goruldu_resim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardViewSohbetler"></ImageView>

    <TextView
        android:id="@+id/sohbetler_goruldu_resim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="15dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sohbetler_resim"
        tools:ignore="DuplicateIds"></TextView>


    <ProgressBar
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:indeterminate="true"
        android:id="@+id/sohbetler_progressbar"
        android:indeterminateTint="#015CE5"
        app:layout_constraintBottom_toBottomOf="@+id/sohbetler_resim"
        app:layout_constraintEnd_toEndOf="@+id/sohbetler_resim"
        app:layout_constraintStart_toStartOf="@+id/sohbetler_resim"
        app:layout_constraintTop_toTopOf="@+id/sohbetler_resim"></ProgressBar>

    <TextView
        android:id="@+id/sohbetler_goruldu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewSohbetler"></TextView>

    <ImageView
        android:id="@+id/sohbetler_mesaj_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        android:src="@drawable/sohbetler_mesaj_copy"
        app:layout_constraintBottom_toTopOf="@+id/cardViewSohbetler"
        app:layout_constraintEnd_toEndOf="@+id/cardViewSohbetler"
        tools:ignore="MissingConstraints,NotSibling"></ImageView>

    <ImageView
        android:id="@+id/sohbetler_mesaj_sil"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:src="@drawable/sohbetler_mesaj_sil"
        app:layout_constraintBottom_toBottomOf="@+id/sohbetler_mesaj_copy"
        app:layout_constraintEnd_toStartOf="@+id/sohbetler_mesaj_copy"
        app:layout_constraintTop_toTopOf="@+id/sohbetler_mesaj_copy"
        tools:ignore="MissingConstraints,NotSibling"></ImageView>


    <ImageView
        android:id="@+id/sohbetler_mesaj_sil_resim"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:visibility="gone"
        android:src="@drawable/sohbetler_mesaj_sil"
        app:layout_constraintBottom_toTopOf="@+id/sohbetler_resim"
        app:layout_constraintEnd_toEndOf="@+id/sohbetler_resim"
        app:layout_constraintTop_toTopOf="@+id/sohbetler_mesaj_copy"
        tools:ignore="MissingConstraints,NotSibling"></ImageView>


    <androidx.cardview.widget.CardView
        android:id="@+id/resimsilcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:cardBackgroundColor="@color/secilmeyenRenk"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/resimsilyazı"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Resimi silmek için tıklayınız"
            android:textAlignment="viewStart"
            android:visibility="gone"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlCompat" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>