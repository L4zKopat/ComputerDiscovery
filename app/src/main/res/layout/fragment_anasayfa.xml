<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Pages.AnasayfaFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_anasayfa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        app:layout_constraintBottom_toTopOf="@+id/buttomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/buttomNavigation"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/recycler_anasayfa"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:elevation="8dp"
        app:itemIconTint="@color/button_view_color"
        app:itemTextColor="@color/button_view_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/ana_sayfa_tasarim"
        tools:ignore="UnknownId">

        <ImageView
            android:id="@+id/zil"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="120dp"
            app:srcCompat="@drawable/bell1" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>



</androidx.constraintlayout.widget.ConstraintLayout>